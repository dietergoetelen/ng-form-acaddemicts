@{
    Layout = null;
}

@using System.Web.Optimization


<!DOCTYPE html>

<html ng-app="app">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    
    @Styles.Render(ngFormAcaddemicts.MVC.App_Start.BundleConfig.Bootstrap)

</head>
<body ng-controller="LayoutController as layout">
    <div class="container">
        
        <div class="row">
            <div class="col-md-6">
                <form name="layout.form">
                    <ad-form-control attrs="{ required: true, minlength: 5, name: 'meh' }" text="myLabel" model="layout.formData.test"></ad-form-control>
                </form>

                <pre>
                    Form == valid: {{ layout.form.$valid }}
                    data == {{ layout.formData.test }}
                </pre>
            </div>
        </div>
    
    </div>

    
    @Scripts.Render(ngFormAcaddemicts.MVC.App_Start.BundleConfig.Angular)
    @Scripts.Render(ngFormAcaddemicts.MVC.App_Start.BundleConfig.App)
</body>
</html>
